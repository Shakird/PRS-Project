<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PRS Guitars | Custom 24</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="assets/style.css">  
</head>

<body>
{% includeJsFile "assets/script.js"%}
{% block content %}
{% for guitarPage in craft.entries.section('guitarPage').all()%}

 <link rel="icon" type="img/png" sizes="16x16" href="{{ guitarPage.companyLogo[0].url()}}">

<div>
    <div class="header">
        <a href="https://prsguitars.com" class="logo"><img src="{{guitarPage.companyLogo[0].getUrl('small')}}" alt="Company Logo"></a>
    </div>

  <div class="section">
      <h1 class="guitarName">{{ guitarPage.guitarName }}</h1>
    <div class="slideshow-container">
      <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
        <div class="numbertext">1 / 3</div>
        <img src="{{guitarPage.guitarImage[0].url()}}">
        <div class="text">Front view</div>
      </div>

      <div class="mySlides fade">
        <div class="numbertext">2 / 3</div>
        <img src="{{guitarPage.guitarImage[1].url()}}">
        <div class="text">Quarter view</div>
      </div>

      <div class="mySlides fade">
        <div class="numbertext">3 / 3</div>
        <img src="{{guitarPage.guitarImage[2].url()}}">
        <div class="text">Rear view</div>
      </div>
   
      <!-- Next and previous buttons -->
      <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
      <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align:center">
      <span class="dot" onclick="currentSlide(1)"></span>
      <span class="dot" onclick="currentSlide(2)"></span>
      <span class="dot" onclick="currentSlide(3)"></span>
    </div>
    </div>

    </p>{{guitarPage.guitarDiscription}}</p>
    <img src="{{guitarPage.guitarImage[3].getUrl('medium')}}" class="guitar-side" alt="Guitar Image">
    <a href="https://prsguitars.com/electrics/model/custom_24_2021" class="link"><button type="button" class="button"> Learn More </button></a>
  </div>
</div>

{% endfor %}
{% endblock %}

